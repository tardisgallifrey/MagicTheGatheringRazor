@page
@model MagicTheGatheringRazor.Pages.Create.CreateModel
@using MagicTheGathering.Models.Enums;
@{
    Layout="_Layout";
}


<h1>Magic The Gathering, Add a Card Page</h1>
<hr>
<p>Enter the basic card information below.</p>
<form method="post">
    Name of Card:<br>
    <input asp-for="CardName" ><br>
    Card Rarity:<br>
    <select asp-for="CardRarity" asp-items="Html.GetEnumSelectList<Rarity>()">
    <option CardRarity="">Select a Rare Type</option></select><br>
    Card is in which Set?<br>
    <input asp-for="CardSet_Name" ><br>
    Power&nbsp;&nbsp;&nbsp;&nbsp;Toughness<br>
    <input asp-for="CardPower" >/<input asp-for="CardToughness"><br>
    Rules Text:<br>
    <textarea 
        data-val="true" 
        data-val-maxlength="255"  
        asp-for="CardRules" ></textarea><br>
    Flavor Text: <br>
    <textarea 
        data-val="true" 
        data-val-maxlength="255" 
        asp-for="CardFlavor" ></textarea><br>
    Card Number in this Set:
    <input asp-for="CardNumber_inSet" ><br>
    Total Number of Cards in this Set:<br>
    <input asp-for="CardSetTotal" ><br>
    <br>
    <input type="submit"><br>
</form>
<a href='javascript:history.go(-1)'>Return to previous page</a>
